{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "hmpro/product-tabs",
  "title": "HM Product Tabs",
  "category": "hmpro",
  "icon": "screenoptions",
  "description": "Tabbed WooCommerce product grid with optional full width layout.",
  "textdomain": "hm-pro-theme",
  "supports": {
    "html": false
  },
  "attributes": {
    "fullWidth": {
      "type": "boolean",
      "default": false
    },
    "columnsDesktop": {
      "type": "number",
      "default": 4
    },
    "gridGap": {
      "type": "number",
      "default": 20
    },
    "gridMaxWidth": {
      "type": "number",
      "default": 1200
    },
    "tabsAlign": {
      "type": "string",
      "default": "center"
    },
    "headerTitle": {
      "type": "string",
      "default": ""
    },
    "headerSubtitle": {
      "type": "string",
      "default": ""
    },
    "headerAlign": {
      "type": "string",
      "default": "center"
    },
    "panelBgColor": {
      "type": "string",
      "default": ""
    },
    "panelBgOpacity": {
      "type": "number",
      "default": 1
    },
    "panelBorderColor": {
      "type": "string",
      "default": ""
    },
    "panelBorderWidth": {
      "type": "number",
      "default": 0
    },
    "panelRadius": {
      "type": "number",
      "default": 16
    },
    "tabs": {
      "type": "array",
      "default": [
        {
          "title": "Tab 1",
          "queryType": "category",
          "termId": 0,
          "perPage": 8
        },
        {
          "title": "Tab 2",
          "queryType": "category",
          "termId": 0,
          "perPage": 8
        }
      ],
      "items": {
        "type": "object"
      }
    },
    "tabTextColor": {
      "type": "string",
      "default": ""
    },
    "tabBgColor": {
      "type": "string",
      "default": ""
    },
    "tabTextHoverColor": {
      "type": "string",
      "default": ""
    },
    "tabBgHoverColor": {
      "type": "string",
      "default": ""
    },
    "tabTextActiveColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "tabBgActiveColor": {
      "type": "string",
      "default": "rgba(0,0,0,0.65)"
    },
    "tabsLayout": {
      "type": "string",
      "default": "horizontal"
    }
  },
  "editorScript": "file:./index.js",
  "script": "file:./view.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "render": "file:./render.php"
}