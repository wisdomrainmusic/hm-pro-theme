{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "hmpro/product-tabs",
  "title": "HM Product Tabs",
  "category": "hmpro",
  "icon": "screenoptions",
  "description": "Tabbed WooCommerce product grid with optional full width layout.",
  "textdomain": "hm-pro-theme",
  "supports": {
    "html": false
  },
  "attributes": {
    "fullWidth": {
      "type": "boolean",
      "default": false
    },
    "columnsDesktop": {
      "type": "number",
      "default": 4
    },
    "gridGap": {
      "type": "number",
      "default": 20
    },
    "tabsAlign": {
      "type": "string",
      "default": "center"
    },
    "tabs": {
      "type": "array",
      "default": [
        {
          "title": "Tab 1",
          "queryType": "category",
          "termId": 0,
          "perPage": 12
        },
        {
          "title": "Tab 2",
          "queryType": "category",
          "termId": 0,
          "perPage": 12
        }
      ],
      "items": {
        "type": "object"
      }
    }
  },
  "editorScript": "file:./index.js",
  "script": "file:./view.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "render": "file:./render.php"
}